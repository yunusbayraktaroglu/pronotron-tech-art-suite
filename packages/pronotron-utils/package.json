{
	"name": "@pronotron/utils",
	"version": "1.0.0",
	"description": "A set of helper modules used by other @pronotron packages, which can also be used individually.",
	"author": "Yunus Bayraktaroglu <yunus.bayraktaroglu@gmail.com>",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"license": "MIT",
	"files": [
		"dist/**"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yunusbayraktaroglu/pronotron-tech-art-suite.git",
		"directory": "packages/pronotron-utils"
	},
	"bugs": {
		"url": "https://github.com/yunusbayraktaroglu/pronotron-tech-art-suite/issues"
	},
	"homepage": "https://yunusbayraktaroglu.github.io/pronotron-tech-art-suite/",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "tsup src/index.ts --format esm,cjs --dts --minify terser",
		"dev": "tsup src/index.ts --format esm,cjs --watch --dts",
		"lint": "eslint .",
		"lint:fix": "eslint . --max-warnings 0 --fix",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
	},
	"devDependencies": {
		"@pronotron/config-eslint": "*",
		"@pronotron/config-ts": "*",
		"@types/jest": "^30.0.0",
		"jest": "^30.2.0",
		"terser": "^5.33.0",
		"ts-jest": "^29.4.5",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3"
	}
}
