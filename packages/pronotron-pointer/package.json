{
	"name": "@pronotron/pointer",
	"version": "0.0.0",
	"description": "Tracks mouse and touch pointers, with custom events like holding and tapping for enhanced interaction control.",
	"author": "Yunus Bayraktaroglu <yunus.bayraktaroglu@gmail.com>",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"license": "MIT",
	"files": [
		"dist/**"
	],
	"keywords": [
		"pointer",
		"interaction"
	],
	"scripts": {
		"build": "tsup src/index.ts --format esm,cjs --dts --external react --minify terser",
		"dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
		"lint": "eslint \"src/**/*.ts*\"",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
	},
	"devDependencies": {
		"@pronotron/eslint-config": "*",
		"@pronotron/tsconfig": "*",
		"@pronotron/utils": "*",
		"@types/react": "^18.2.61",
		"@types/react-dom": "^18.2.19",
		"eslint": "^8.57.0",
		"terser": "^5.33.0",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"react": "^18.2.0"
	}
}
