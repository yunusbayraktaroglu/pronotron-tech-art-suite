{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": [
                "@pronotron/config-tsup#build",
                "@pronotron/config-jest#build"
            ]
		},
		"build": {
			"inputs": [ 
				"$TURBO_DEFAULT", 
				".env*" 
			],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**"
			],
			"dependsOn": [ "^build" ]
		},
		"test": {
			"outputs": [ "coverage/**" ],
			"dependsOn": [ "^build" ]
		},
		"test:watch": {
    		"cache": false,
    		"persistent": true
    	},
		"lint": {
			"dependsOn": [ "^lint" ]
		},
		"docs": {},
		"clean": {
			"cache": false
		}
	}
}